<UserControl x:Class="StylingTemplatingOverview.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:src="using:StylingTemplatingOverview">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" BorderThickness="0" Padding="0">
        <StackPanel Margin="10" >

            <src:FirstLastNameTextBoxes/>

            <Button Content="default" HorizontalAlignment="Center" Width="100" Height="40" Click="Button_Click"
            BorderBrush="Black" BorderThickness="4"/>

            <TextBlock HorizontalAlignment="Center" Text="SkinnedButton"/>

            <src:SkinnedButton/>

            <TextBlock HorizontalAlignment="Center" Text="button stages"/>

            <src:ButtonStages/>

            <src:DefineTemplateSnippets/>

        </StackPanel>
    </ScrollViewer>

</UserControl>
