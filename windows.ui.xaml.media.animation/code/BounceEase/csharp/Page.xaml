<UserControl x:Class="BounceEase.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <StackPanel>
       <TextBlock Margin="10" TextWrapping="Wrap">Click on the rectangle to start the animation. Applies a BounceEase easing function to a DoubleAnimation to create a bouncing effect.</TextBlock> 
    
    <!-- <SnippetBounceEase> -->
    <StackPanel x:Name="LayoutRoot" >
        <StackPanel.Resources>
            <Storyboard x:Name="myStoryboard">
                <DoubleAnimation From="1" To="6" Duration="00:00:3" 
                    Storyboard.TargetName="rectScaleTransform" 
                    Storyboard.TargetProperty="ScaleY">
                    <DoubleAnimation.EasingFunction>
                        <BounceEase Bounces="2" EasingMode="EaseOut" 
                                    Bounciness="2" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
        </StackPanel.Resources>

        <Rectangle PointerPressed="Pointer_Clicked" 
         Fill="Blue" Width="200" Height="30">
            <Rectangle.RenderTransform>
                <ScaleTransform x:Name="rectScaleTransform" />
            </Rectangle.RenderTransform>
        </Rectangle>

    </StackPanel>
    <!-- </SnippetBounceEase> -->
    </StackPanel>
</UserControl>
