<UserControl x:Class="Matrix3DProjectionSample.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="500">
    <StackPanel>
        <TextBlock Margin="10" TextWrapping="Wrap">Click on the image to apply the projection. This sample multiplies several Matrix3D matrixes together to create a 3D effect.</TextBlock>
        <Grid x:Name="LayoutRoot" >
        <!-- <SnippetMatrix3DProjectionSample> -->
        <!-- When you click on the image, the projection is applied. -->
        <Image PointerPressed="ApplyProjection" x:Name="BeachImage" Source="guy_by_the_beach.jpg" 
               Width="200"/>
        <!-- </SnippetMatrix3DProjectionSample> -->

    </Grid>
    </StackPanel>
</UserControl>
