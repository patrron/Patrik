<UserControl x:Class="imaging_ovw_painting_with_an_image.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="600" Height="300">
    <Grid x:Name="LayoutRoot" Background="Green" >
        <!-- <Snippetimaging_ovw_painting_with_an_image> -->
        <!-- TextBlock with an image brush applied to the text. -->
        <TextBlock FontFamily="Verdana" FontSize="72"
         FontStyle="Italic" FontWeight="Bold">
            SHRUBBERY
          <TextBlock.Foreground>
            <ImageBrush ImageSource="forest.jpeg"/>
          </TextBlock.Foreground>
        </TextBlock>
        <!-- </Snippetimaging_ovw_painting_with_an_image> -->
    </Grid>
</UserControl>
