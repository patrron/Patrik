<UserControl x:Class="transforms_ovw_interactive_transforms.Page"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
  Width="400" Height="300">
  <!-- <Snippettransforms_ovw_interactive_transforms> -->
  <StackPanel>
    <Rectangle PointerPressed="HandlePointerPressed"
      Width="50" Height="50" Fill="RoyalBlue">
      <Rectangle.RenderTransform>

        <!-- If you give the transform a name you can 
          access it easily from code. -->
        <ScaleTransform x:Name="myScaleTransform" />
      </Rectangle.RenderTransform>
    </Rectangle>
  </StackPanel>
  <!-- </Snippettransforms_ovw_interactive_transforms> -->
</UserControl>
